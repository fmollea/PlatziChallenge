<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieFragment">

    <fragment
        android:id="@+id/movieFragment"
        android:name="com.fmollea.platzichallenge.ui.movie.MovieFragment"
        android:label="Movies"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@anim/slide_in_left"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_right"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.fmollea.platzichallenge.ui.movieDetail.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail">
        <argument
            android:name="id"
            app:argType="integer"
            android:defaultValue="-1" />
        <argument
            android:name="posterImageUrl"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="backgroundImageUrl"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="voteAverage"
            app:argType="float"
            android:defaultValue="-1.0"/>
        <argument
            android:name="overview"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="title"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="language"
            app:argType="string"
            android:defaultValue=""/>
        <argument
            android:name="releaseDate"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>
</navigation>